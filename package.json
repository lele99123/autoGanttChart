{
  "name": "autoganttchart",
  "version": "1.0.0",
  "description": "学习计划甘特图生成器",
  "main": "index.html",
  "author": {
    "name": "Developer",
    "email": "dev@example.com"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "nw": "nw .",
    "build": "build --tasks win-x64 --mirror https://dl.nwjs.io/ .",
    "dist": "build --tasks win-x64 --mirror https://dl.nwjs.io/ --concurrent .",
    "vercel-build": "echo 'Building for Vercel...'"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nw": "^0.83.0",
    "nw-builder": "^3.5.7",
    "nwjs-builder-phoenix": "^1.15.0",
    "nodemon": "^3.1.9"
  },
  "window": {
    "title": "学习计划甘特图生成器",
    "width": 1200,
    "height": 800,
    "min_width": 800,
    "min_height": 600,
    "icon": "icon.ico"
  },
  "build": {
    "nwVersion": "latest",
    "output": "./dist/",
    "packed": true,
    "win": {
      "productName": "学习计划甘特图生成器",
      "companyName": "Developer",
      "icon": "icon.ico",
      "unIcon": "icon.ico"
    },
    "mac": {
      "productName": "学习计划甘特图生成器",
      "companyName": "Developer",
      "icon": "icon.icns"
    },
    "outputPattern": "${NAME}-${PLATFORM}-${VERSION}",
    "strippedProperties": [
      "build",
      "devDependencies",
      "scripts"
    ],
    "includes": [
      "**/*",
      "*.js",
      "*.json",
      "*.html",
      "models/**/*",
      "routes/**/*"
    ],
    "excludes": [
      "node_modules/nw-builder/**/*",
      "node_modules/nwjs-builder-phoenix/**/*",
      "node_modules/nodemon/**/*",
      "dist/**/*"
    ]
  }
}
